<style>
    .custom-header {
        background: linear-gradient(90deg, #ffe082 0%, #ffb300 100%);
        color: #333;
        padding: 1.2rem 2rem 1.2rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-radius: 0 0 18px 18px;
        box-shadow: 0 2px 8px rgba(255,179,0,0.08);
        margin-bottom: 2rem;
    }
    .custom-header .logo {
        font-family: 'Montserrat', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: #ffb300;
        text-shadow: 1px 1px 8px #fffbe6;
        margin-right: 2rem;
    }
    .custom-header .user-info {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
        background: #fffbe6;
        padding: 0.5rem 1.2rem;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(255,179,0,0.08);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .custom-header .back-btn {
        background: #fffbe6;
        color: #ffb300;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1.2rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        margin-right: 1.5rem;
        transition: background 0.2s, color 0.2s;
        box-shadow: 0 1px 4px rgba(255,179,0,0.08);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }
    .custom-header .back-btn:hover {
        background: #ffb300;
        color: #fff;
    }
</style>
<header class="custom-header">
    <div style="display: flex; align-items: center;">
        <span class="logo">EasyStay Admin</span>
        <a href="/admin/dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
    <div class="user-actions">
        <% if (locals.user) { %>
            <div class="user-menu">
                <button class="user-menu-button">
                    <i class="fas fa-user-circle"></i>
                    <span><%= user.nombre.split(' ')[0] %></span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div class="user-menu-content">
                    <div class="user-info">
                        <p class="user-name">Hola, <%= user.nombre %></p>
                        <p class="user-email"><%= user.email %></p>
                    </div>
                    <hr class="dropdown-divider">
                    <a href="/perfil" class="dropdown-item">
                        <i class="fas fa-user-circle"></i> Mi perfil
                    </a>
                    <a href="/bookings" class="dropdown-item">
                        <i class="fas fa-calendar-alt"></i> Mis reservas
                    </a>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-heart"></i> Favoritos
                    </a>
                    <hr class="dropdown-divider">
                    <a href="/logout" class="dropdown-item logout-link">
                        <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                    </a>
                </div>
            </div>
        <% } else { %>
            <a href="/login" class="btn btn-login">Iniciar sesión</a>
            <a href="/register" class="btn btn-register">Registrarse</a>
        <% } %>
    </div>
</header>