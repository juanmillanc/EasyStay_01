<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/mexicana.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.1/css/lightgallery.min.css">
</head>
<body>
    <header class="restaurante-header">
        <div class="header-content">
            <a href="/restaurantes" class="back-button">
                <i class="fas fa-arrow-left"></i> Volver a restaurantes
            </a>
            <h1><%= restaurante.nombre %></h1>
            <div class="rating-badge">
                <%= restaurante.calificacion %> <i class="fas fa-star"></i>
            </div>
        </div>
    </header>

    <main class="restaurante-container">
        <!-- Galería de imágenes -->
        <section class="gallery-section" id="gallery">
            <% restaurante.imagenes.forEach((imagen, index) => { %>
                <a href="<%= imagen %>" class="gallery-item <%= index === 0 ? 'main-image' : '' %>">
                    <img src="<%= imagen %>" alt="<%= restaurante.nombre %> <%= index + 1 %>">
                </a>
            <% }); %>
        </section>

        <!-- Información principal -->
        <section class="info-section">
            <div class="info-card">
                <h2><i class="fas fa-info-circle"></i> Información</h2>
                <p><%= restaurante.descripcion %></p>
                
                <div class="details-grid">
                    <div class="detail-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span><%= restaurante.direccion %></span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-phone"></i>
                        <span><%= restaurante.telefono %></span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-clock"></i>
                        <span><%= restaurante.horario %></span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-utensils"></i>
                        <span><%= restaurante.tipo_cocina %> · <%= restaurante.precio %></span>
                    </div>
                </div>
            </div>

            <!-- Características -->
            <div class="features-card">
                <h2><i class="fas fa-star"></i> Características</h2>
                <ul class="features-list">
                    <% restaurante.caracteristicas.forEach(caracteristica => { %>
                        <li><i class="fas fa-check"></i> <%= caracteristica %></li>
                    <% }); %>
                </ul>
            </div>
        </section>

        <!-- Menú -->
        <section class="menu-section">
            <h2><i class="fas fa-book-open"></i> Menú destacado</h2>
            <div class="menu-grid">
                <% restaurante.menu.forEach(item => { %>
                    <div class="menu-item">
                        <h3><%= item.nombre %></h3>
                        <p class="price"><%= item.precio %></p>
                        <p class="description"><%= item.descripcion %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <!-- Mapa -->
        <section class="map-section">
            <h2><i class="fas fa-map-marked-alt"></i> Ubicación</h2>
            <div class="map-container">
                <iframe 
                    width="100%" 
                    height="400" 
                    frameborder="0" 
                    scrolling="no" 
                    marginheight="0" 
                    marginwidth="0" 
                    src="https://maps.google.com/maps?q=<%= encodeURIComponent(restaurante.direccion) %>&output=embed">
                </iframe>
            </div>
        </section>

        <!-- Reservación -->
        <section class="booking-section">
            <h2><i class="fas fa-calendar-check"></i> Reservar mesa</h2>
            <form class="booking-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fecha">Fecha</label>
                        <input type="date" id="fecha" required>
                    </div>
                    <div class="form-group">
                        <label for="hora">Hora</label>
                        <input type="time" id="hora" required>
                    </div>
                    <div class="form-group">
                        <label for="personas">Personas</label>
                        <select id="personas">
                            <option value="1">1 persona</option>
                            <option value="2" selected>2 personas</option>
                            <option value="3">3 personas</option>
                            <option value="4">4 personas</option>
                            <option value="5">5+ personas</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="notas">Notas especiales</label>
                    <textarea id="notas" rows="3"></textarea>
                </div>
                <button type="submit" class="reserve-button">Reservar ahora</button>
            </form>
        </section>
    </main>

    <footer class="restaurante-footer">
        <p>© 2023 EasyStay · Todos los derechos reservados</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.1/lightgallery.min.js"></script>
    <script>
        // Galería de imágenes
        lightGallery(document.getElementById('gallery'), {
            selector: '.gallery-item',
            download: false,
            counter: false
        });

        // Formulario de reservación
        document.querySelector('.booking-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Reservación enviada con éxito. Nos comunicaremos contigo para confirmar.');
        });
    </script>
</body>
</html>