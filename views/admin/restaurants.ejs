<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/admin-hotels.css">

<div class="admin-hotels-container">
    <%- include('../partials/header') %>
    <div class="hotels-dashboard">
        <div class="dashboard-header">
            <h1>Gesti√≥n de Restaurantes</h1>
            <button class="add-hotel-btn" onclick="window.location.href='/admin/restaurants/new'" type="button">
                <i class="fas fa-plus"></i> Agregar Nuevo Restaurante
            </button>
        </div>
        <div class="hotels-filters">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Buscar restaurante...">
            </div>
            <div class="filter-options">
                <select>
                    <option value="">Todos los estados</option>
                    <option value="activo">Activo</option>
                    <option value="inactivo">Inactivo</option>
                </select>
            </div>
        </div>
        <div class="hotels-grid">
            <% if (typeof restaurants !== 'undefined' && restaurants.length > 0) { %>
                <% restaurants.forEach(restaurant => { %>
                    <div class="hotel-card">
                        <div class="hotel-image">
                            <img src="<%= restaurant.imagen_url || '/img/default-restaurant.jpg' %>" alt="<%= restaurant.nombre %>">
                            <div class="hotel-status <%= restaurant.estado %>">
                                <%= restaurant.estado %>
                            </div>
                        </div>
                        <div class="hotel-info">
                            <h3><%= restaurant.nombre %></h3>
                            <p class="hotel-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <%= restaurant.ubicacion %>
                            </p>
                        </div>
                        <div class="hotel-actions">
                            <button class="edit-btn" title="Editar">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="view-btn" title="Ver detalles">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="toggle-status-btn" title="Cambiar estado">
                                <i class="fas fa-power-off"></i>
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="no-hotels">
                    <i class="fas fa-utensils"></i>
                    <p>No hay restaurantes registrados</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
<%- include('../partials/head') %>