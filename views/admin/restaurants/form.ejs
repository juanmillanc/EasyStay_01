<%- include('../../partials/head') %>
<link rel="stylesheet" href="/css/admin-hotels.css">

<div class="admin-hotels-container">
    <%- include('../../partials/header') %>
    <div class="hotels-dashboard">
        <div class="dashboard-header">
            <h1>Agregar Nuevo Restaurante</h1>
            <a href="/admin/restaurants" class="add-hotel-btn" style="background:#eee; color:#333;"><i class="fas fa-arrow-left"></i> Volver</a>
        </div>
        <form action="/admin/restaurants" method="POST" enctype="multipart/form-data" class="hotel-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="nombre">Nombre del restaurante *</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>
                <div class="form-group">
                    <label for="ciudad">Ciudad *</label>
                    <input type="text" id="ciudad" name="ciudad" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="direccion">Dirección *</label>
                    <input type="text" id="direccion" name="direccion" required>
                </div>
                <div class="form-group">
                    <label for="tipo_cocina">Tipo de cocina</label>
                    <input type="text" id="tipo_cocina" name="tipo_cocina">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="precio_promedio">Precio promedio</label>
                    <input type="number" step="0.01" id="precio_promedio" name="precio_promedio">
                </div>
                <div class="form-group">
                    <label for="estado">Estado</label>
                    <select id="estado" name="estado">
                        <option value="activo">Activo</option>
                        <option value="inactivo">Inactivo</option>
                        <option value="cerrado_temporalmente">Cerrado temporalmente</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea id="descripcion" name="descripcion" rows="3"></textarea>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="imagen_principal">Imagen principal</label>
                    <input type="file" id="imagen_principal" name="imagen_principal" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="coordenadas_lat">Latitud</label>
                    <input type="text" id="coordenadas_lat" name="coordenadas_lat">
                </div>
                <div class="form-group">
                    <label for="coordenadas_lng">Longitud</label>
                    <input type="text" id="coordenadas_lng" name="coordenadas_lng">
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="add-hotel-btn"><i class="fas fa-save"></i> Guardar Restaurante</button>
            </div>
        </form>
    </div>
</div>
<%- include('../../partials/footer') %> 